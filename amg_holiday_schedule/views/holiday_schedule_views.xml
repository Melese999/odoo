<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Holiday Schedule -->
    <record id="holiday_schedule_view_form" model="ir.ui.view">
        <field name="name">holiday.schedule.form</field>
        <field name="model">holiday.schedule</field>
        <field name="arch" type="xml">
            <form string="Holiday Schedule">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g., Ethiopian Holidays 2025"/></h1>
                    </div>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Holidays" name="holidays">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Holiday Schedule -->
    <record id="holiday_schedule_view_tree" model="ir.ui.view">
        <field name="name">holiday.schedule.tree</field>
        <field name="model">holiday.schedule</field>
        <field name="arch" type="xml">
            <tree string="Holiday Schedules">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Window Action for Holiday Schedule -->
    <record id="holiday_schedule_action" model="ir.actions.act_window">
        <field name="name">Holiday Schedules</field>
        <field name="res_model">holiday.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Holiday Schedule.
            </p><p>
                These schedules can be used in other parts of the system, like KPI Management,
                to calculate the number of working days in a period.
            </p>
        </field>
    </record>

    <!-- Menu Item (placing it under CRM Configuration for easy access) -->
    <menuitem
        id="holiday_schedule_menu"
        name="Holiday Schedules"
        parent="crm.crm_menu_config"
        action="holiday_schedule_action"
        sequence="100"/>
</odoo>