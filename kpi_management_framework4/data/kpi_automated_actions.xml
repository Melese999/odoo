<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron: Update KPI Target Actuals Daily -->
        <record id="ir_cron_update_kpi_targets" model="ir.cron">
            <field name="name">KPI: Auto-update Target Actuals</field>
            <field name="model_id" ref="model_kpi_target"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_actual_values()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron: Notify Managers if KPI Achievement < Threshold -->
        <record id="ir_cron_notify_kpi_threshold" model="ir.cron">
            <field name="name">KPI: Notify Managers for Low Achievement</field>
            <field name="model_id" ref="model_kpi_target"/>
            <field name="state">code</field>
            <field name="code">model._cron_notify_low_achievement()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Automated Action: Trigger KPI Recalculation on Telemarketing Confirmation Creation/Update -->
        <record id="kpi_auto_update_confirmation_create" model="base.automation">
            <field name="name">Update KPI on Telemarketing Confirmation</field>
            <field name="model_id" ref="model_telemarketing_confirmation"/>
            <field name="trigger">on_create_or_write</field>
            <field name="state">code</field>
            <field name="code">model._update_targets_for_user(record.lead_id.user_id.id, 'telemarketing.confirmation')</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Automated Action: Optional Trigger on Lead Creation -->
        <record id="kpi_auto_update_lead_create" model="base.automation">
            <field name="name">Update KPI on Lead Creation</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="trigger">on_create_or_write</field>
            <field name="state">code</field>
            <field name="code">model._update_targets_for_user(record.user_id.id, 'crm.lead')</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
