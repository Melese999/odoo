<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. Kanban View - The Modern Dashboard -->
    <record id="kpi_target_view_kanban" model="ir.ui.view">
        <field name="name">kpi.target.kanban</field>
        <field name="model">kpi.target</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="user_id">
                <field name="user_id"/>
                <field name="kpi_id"/>
                <field name="target_value"/>
                <field name="actual_value"/>
                <field name="achievement_percentage"/>
                <field name="date_end"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_header">
                                <div class="o_kanban_record_header_title">
                                    <strong class="o_kanban_record_title"><field name="kpi_id"/></strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    Target: <field name="target_value" widget="float"/>
                                </div>
                                <div>
                                    Actual: <field name="actual_value" widget="float"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="achievement_percentage" widget="progressbar"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span>Due: <field name="date_end"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- 2. Update the Window Action to include Kanban as the default view -->
     <record id="kpi_target_reporting_action" model="ir.actions.act_window">
        <field name="name">KPI Analysis</field>
        <field name="res_model">kpi.target</field>
        <field name="view_mode">kanban,pivot,graph,tree,form</field>
        <field name="search_view_id" ref="kpi_management_framework.kpi_target_view_search"/>
        <field name="context">{'search_default_active': 1, 'search_default_group_by_user': 1, 'create': False}</field>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No KPI targets found for you.
            </p><p>
                This dashboard allows you to analyze your performance against targets.
            </p>
        </field>
    </record>

    <!-- 3. Add KPI Dashboard to the CRM menu -->
    <menuitem
        id="kpi_reporting_menu"
        name="KPI Dashboard"
        parent="crm.crm_menu_report"
        action="kpi_target_reporting_action"
        sequence="50"/>

</odoo>