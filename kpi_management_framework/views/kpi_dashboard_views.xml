<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kpi_target_view_kanban" model="ir.ui.view">
        <field name="name">kpi.target.kanban.dashboard</field>
        <field name="model">kpi.target</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="user_id">
                <field name="user_id"/>
                <field name="date_end"/>
                <field name="target_line_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <t t-foreach="record.target_line_ids.raw_value" t-as="line">
                                    <div class="mb-2">
                                        <div>
                                            <span class="text-muted" t-esc="line.kpi_definition_id[1]"/>:
                                            <strong class="float-end"><t t-esc="line.actual_value"/> / <t t-esc="line.target_value"/></strong>
                                        </div>
                                        <div class="progress" style="height: 12px;">
                                            <div class="progress-bar" role="progressbar"
                                                 t-attf-style="width: {{line.achievement_percentage}}%;"
                                                 t-attf-aria-valuenow="{{line.achievement_percentage}}"
                                                 aria-valuemin="0" aria-valuemax="100">
                                                <small t-esc="parseInt(line.achievement_percentage) + '%'"/>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span>Due: <field name="date_end"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- The Action with corrected search view reference -->
    <record id="kpi_target_reporting_action" model="ir.actions.act_window">
        <field name="name">KPI Analysis</field>
        <field name="res_model">kpi.target</field>
        <field name="view_mode">kanban,pivot,graph,tree,form</field>
        <field name="search_view_id" ref="kpi_target_view_search"/>
        <field name="context">{'search_default_active': 1, 'search_default_group_by_user': 1, 'create': False}</field>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No KPI targets found for you.
            </p><p>
                This dashboard allows you to analyze your performance against targets.
            </p>
        </field>
    </record>

    <menuitem
        id="kpi_reporting_menu"
        name="KPI Dashboard"
        parent="crm.crm_menu_report"
        action="kpi_target_reporting_action"
        sequence="50"/>
</odoo>