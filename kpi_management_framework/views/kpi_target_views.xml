<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for KPI Target -->
    <record id="kpi_target_view_form" model="ir.ui.view">
        <field name="name">kpi.target.form</field>
        <field name="model">kpi.target</field>
        <field name="arch" type="xml">
            <form string="KPI Target">
                <header/>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_activities"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-tasks"
                                invisible="activity_count == 0">
                            <field name="activity_count" widget="statinfo" string="Activities"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="kpi_id" options="{'no_create': True}"/>
                            <field name="user_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group string="Target Planning">
                            <field name="holiday_schedule_id" placeholder="Optional"/>
                            <field name="working_days" readonly="1"/>
                            <field name="target_value"/>
                        </group>
                    </group>
                    <group string="Performance">
                        <field name="actual_value"/>
                        <field name="achievement_percentage" widget="progressbar"/>
                        <field name="last_computed_date"/>
                    </group>
                    <notebook>
                        <page string="Tracked Activities" name="activities">
                            <field name="history_ids" readonly="1">
                                <tree>
                                    <field name="activity_date" string="Date"/>
                                    <field name="source_document" string="Source"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View for KPI Target -->
    <record id="kpi_target_view_tree" model="ir.ui.view">
        <field name="name">kpi.target.tree</field>
        <field name="model">kpi.target</field>
        <field name="arch" type="xml">
            <tree string="KPI Targets">
                <field name="name"/>
                <field name="user_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="target_value"/>
                <field name="actual_value"/>
                <field name="activity_count" string="Activities"/>
                <field name="achievement_percentage" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <!-- Window Action for KPI Target -->
    <record id="kpi_target_action" model="ir.actions.act_window">
        <field name="name">KPI Targets</field>
        <field name="res_model">kpi.target</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocent_smiling_face">
                Assign a new KPI Target to a user.
            </p>
        </field>
    </record>
</odoo>