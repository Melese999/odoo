<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Simple view inheritance that should work -->
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Add a new header element -->
                <xpath expr="//header" position="inside">
                    <div class="my_custom_buttons">
                        <button name="action_update_manufacturing_dimensions"
                                string="Update Manufacturing Dimensions"
                                type="object"
                                class="btn-secondary"/>
                        <button name="debug_manufacturing_links"
                                string="Debug Links"
                                type="object"
                                class="btn-secondary"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>