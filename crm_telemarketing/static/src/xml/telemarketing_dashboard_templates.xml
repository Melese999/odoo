<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="crm_telemarketing.TelemarketingDashboard">
        <div class="o_telemarketing_dashboard p-4 bg-light">
            <h2 class="mb-4">Telemarketing Dashboard</h2>

            <!-- KPI Cards -->
            <div class="row mb-4">
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card shadow-sm text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title text-muted">Total Calls</h5>
                            <p class="h2 text-primary fw-bold"><t t-esc="state.kpis.total_calls"/></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card shadow-sm text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title text-muted">Completed Calls</h5>
                            <p class="h2 text-success fw-bold"><t t-esc="state.kpis.done_calls"/></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card shadow-sm text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title text-muted">Completion Rate</h5>
                            <p class="h2 text-info fw-bold"><t t-esc="state.kpis.completion_rate"/>%</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card shadow-sm text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title text-muted">Avg. Duration (min)</h5>
                            <p class="h2 text-warning fw-bold"><t t-esc="state.kpis.avg_duration"/></p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Pivot Table: "Calls by User - Direction" -->
                <div class="col-lg-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header fw-bold">Calls by User and Direction</div>
                        <div class="card-body table-responsive">
                            <table class="table table-sm table-hover o_section_and_total_row_hover">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-end">User</th>
                                        <th colspan="3" class="text-center border-end">Inbound</th>
                                        <th colspan="3" class="text-center">Outbound</th>
                                    </tr>
                                    <tr>
                                        <th class="border-end"></th>
                                        <th class="text-center">Total</th>
                                        <th class="text-center">Done</th>
                                        <th class="text-center border-end">Pending</th>
                                        <th class="text-center">Total</th>
                                        <th class="text-center">Done</th>
                                        <th class="text-center">Pending</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="Object.keys(state.pivot_table.rows)" t-as="user" t-key="user">
                                        <tr>
                                            <td class="fw-bold border-end"><t t-esc="user"/></td>
                                            <td class="text-center"><t t-esc="state.pivot_table.rows[user].inbound_total || 0"/></td>
                                            <td class="text-center text-success"><t t-esc="state.pivot_table.rows[user].inbound_done || 0"/></td>
                                            <td class="text-center text-warning border-end"><t t-esc="state.pivot_table.rows[user].inbound_pending || 0"/></td>
                                            <td class="text-center"><t t-esc="state.pivot_table.rows[user].outbound_total || 0"/></td>
                                            <td class="text-center text-success"><t t-esc="state.pivot_table.rows[user].outbound_done || 0"/></td>
                                            <td class="text-center text-warning"><t t-esc="state.pivot_table.rows[user].outbound_pending || 0"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Bar Chart: "Inbound vs Outbound by Day" -->
                <div class="col-lg-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header fw-bold">Inbound vs Outbound by Day</div>
                        <div class="card-body">
                            <canvas t-ref="bar_chart" height="100"/>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </t>

</templates>