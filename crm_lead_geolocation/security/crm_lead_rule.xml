<odoo>
  <data>

    <!-- Salesperson: only their own leads -->
    <record id="crm_lead_rule_sales_user" model="ir.rule">
      <field name="name">Sales User: own leads</field>
      <field name="model_id" ref="crm.model_crm_lead"/>
      <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
      <field name="domain_force">[('user_id', '=', user.id)]</field>
    </record>

    <!-- Sales Manager: leads of their team -->
    <record id="crm_lead_rule_sales_manager" model="ir.rule">
      <field name="name">Sales Manager: team leads</field>
      <field name="model_id" ref="crm.model_crm_lead"/>
      <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
      <field name="domain_force">['|', ('user_id', '=', user.id), ('team_id.user_id', '=', user.id)]</field>
    </record>

    <!-- Company Manager: see leads by company_ids -->
    <record id="crm_lead_rule_company_manager" model="ir.rule">
      <field name="name">Company Manager: leads by company</field>
      <field name="model_id" ref="crm.model_crm_lead"/>
      <field name="groups" eval="[(4, ref('crm_lead_geolocation.group_company_manager'))]"/>
      <field name="domain_force"> ['|',
            ('company_ids', 'in', user.company_ids.ids),
            ('company_ids', '=', False)
        ]</field>
    </record>

  </data>
</odoo>
